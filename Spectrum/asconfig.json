{
    "config": "royale",
    "type": "lib",
    "compilerOptions": {
        // Enable the definitions below to enable code completion in JS blocks while working
        // The SWF target also needs to be commented out
        "define": [
            {
                "name": "COMPILE::JS",
                "value": true
            },
            {
                "name": "COMPILE::SWF",
                "value": false
            }
        ],
        "debug": true,
        "targets": [
            // "SWF",
            "JSRoyale"
        ],
        "external-library-path": [
            "${royalelib}/libs",
            "${royalelib}/../js/libs",
            "libs"
        ],
        "js-external-library-path": [
            "${royalelib}/../js/libs"
        ],
        "js-library-path": [
            "${royalelib}/js/libs",
            "libs"
        ],
        "load-config": [
            "compile-config.xml"
        ],
        "warn-public-vars": false,
        "include-classes": [
            "Spectrum"
        ],
        "include-sources": [
            "src"
        ],
        "source-path": [
            "src"
        ],
        "output": "target/Spectrum.swc"
    }
}