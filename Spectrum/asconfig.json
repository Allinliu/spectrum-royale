{
    "config": "royale",
    "type": "lib",
    "additionalOptions": "-js-load-config=js-compile-config.xml",
    "compilerOptions": {
        "debug": true,
        "targets": [
            "SWF",
            "JSRoyale"
        ],
        "external-library-path": [
            "typedefs"
        ],
        "js-external-library-path": [
            "typedefs"
        ],
        "load-config": [
            "compile-config.xml"
        ],
        "warn-public-vars": false,
        "include-classes": [
            "Spectrum"
        ],
        "include-sources": [
            "src"
        ],
        "source-path": [
            "src"
        ],
        "output": "target/Spectrum.swc"
    }
}

