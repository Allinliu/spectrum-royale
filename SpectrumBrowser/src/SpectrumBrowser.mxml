<?xml version="1.0" encoding="utf-8"?>
<sp:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
  xmlns:js="library://ns.apache.org/royale/basic"
  xmlns:sp="library://ns.unhurdle.com/spectrum" xmlns:engine="org.apache.royale.text.engine.*" colorstop="dark">
  <fx:Script>
    <![CDATA[

      import com.unhurdle.spectrum.Alert;
      import com.unhurdle.spectrum.Toast;

      private function showAlert():void{
        var alert:Alert = new Alert();
        alert.status = Alert.HELP;
        alert.closeText = "Goodbye";
        alert.header = "Hey";
        alert.content = "Need some help?"
        alert.overlayAlpha = 0.4;
       
        alert.show();
      }
      private function showToast():void{
        new Toast("Some great news here!").show();
        // var toast:Toast = new Toast();
        // toast.text = "Some great news here!"
        // toast.show();
      }

