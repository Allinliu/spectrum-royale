      //   "Five"

      // ];
      private function handleCheckboxChange():void
      {
        new Toast("Checkbox value: " + myCheckbox.checked).show();
      }
      [Bindable]
      private var listProvider:Array = [
        "One",
        "Two",
        "Three",
        "Four",
        "Five"
      ];
    ]]>
  </fx:Script>
  <sp:initialView>
    <sp:View>
  <sp:Search />
 
    <sp:ButtonGroup>
      <sp:Radio text="radio1" radioName="redio"  />
      <sp:Radio text="radio2" radioName="redio" valid="true"/>
      <sp:Label text="label" color="red" size="large" active="false"/>
      <sp:TextArea placeholder="enter text" multiline="true" required="true"/>
      <sp:CheckBox id="myCheckbox" checked="true" change="handleCheckboxChange()" text="check box1" indeterminate="true" valid="false" quiet="true"/><!--indeterminate="true"-->
      <sp:ClearButton disabled="true" small="true"/>
      <sp:ComboBox placeholder="Type here" isInvalid="true"/>
    </sp:ButtonGroup>
      <sp:CycleButton play="true" pause="true"/>
      <sp:Tool />
      <sp:Tag text="tag 1" deletable="true" />
      <!-- <sp:Alert text="Alert"/>  -->
      <sp:Banner header="Most Popular" type="info" content="Include Awesome"/>
      <sp:BarLoader label="Thingies" meter="true" value="90"/>
      <sp:CircleLoader/>
      <sp:Well/>
      <sp:Button text="Show Alert" click="showAlert()" flavor="cta"/>
      <sp:ButtonGroup/>
      <sp:Button text="Show Toast" click="showToast()"/>
      <sp:CoachMark/>
      <sp:Dial/>
      <sp:DropIndicator/>
      <sp:Slider max="150" value="30" displayValue="true" label="Foo" width="400" step="4" ticks="9" showTickValues="true"/>
      <sp:List dataProvider="{listProvider}"/>
      <sp:Popover open="true" relativePosition="true">
        <sp:Menu>
          <sp:dataProvider>
          <fx:Array>
            <sp:MenuItem text="Category One" isHeading="true"/>
            <sp:MenuItem text="Item One"/>
            <sp:MenuItem text="Item Two"/>
            <sp:MenuItem text="Item Three" selected="true"/>
            <sp:MenuItem isDivider="true"/>
            <sp:MenuItem text="Category Two" isHeading="true"/>
            <sp:MenuItem text="Item One"/>
            <sp:MenuItem text="Item Two"/>
            <sp:MenuItem text="Item Three" disabled="true"/>
            
          </fx:Array>
          </sp:dataProvider>
        </sp:Menu>
      </sp:Popover>
      <sp:Switch text="Toggle 1" checked="true" blue="false"/>
      <sp:Switch text="Toggle On" checked="true"/>
      <sp:Switch text="Toggle On" checked="true" quiet="true"/>
      <sp:Tooltip text="Label"/>
      <sp:Tooltip text="Label info with icon" info="true" infoIcon="true"/>
      <sp:Tooltip text="Label positive with icon" positive="true" positiveIcon="true"/>
      <sp:Body text=" Body1" size="1"/>
      <sp:Body text=" Body2" size="2"/>
      <sp:Body text=" Body5" size="5"/>
      <sp:Code text=" Code2" size="2"/>
      <sp:Code text=" Code3" size="3"/>
      <sp:Display text=" Display1 --quiet" size="1" quiet="true"/>
      <sp:Display text=" Display1" size="1"/>
      <sp:Display text=" Display1 --strong" size="1" strong="true"/>
      <sp:Heading text=" Heading2 --quiet" size="2" quiet="true"/>
      <sp:Heading text=" Heading2 " size="2"/>
      <sp:Heading text=" Heading2 --strong" size="2" strong="true"/>
    </sp:View>
  </sp:initialView>  
</sp:Application>