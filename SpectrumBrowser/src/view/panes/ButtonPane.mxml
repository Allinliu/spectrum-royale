      <sp:Code text='&lt;sp:Button flavor="secondary" text="Button" disabled="true"/&gt;' size="4" style="white-space:break-spaces;"/>
    </html:P>
  </sp:TypographyGroup>
  <html:Div height="12"/>

  <sp:Heading size="4" text="Secondary (quiet)"/>
  <html:Div height="12"/>
  <sp:ButtonGroup>
    <sp:Button flavor="secondary" text="Button" quiet="true"/>
    <sp:Button flavor="secondary" text="Button" quiet="true" disabled="true"/>
  </sp:ButtonGroup>
  <html:Div height="12"/>
  <sp:TypographyGroup>
