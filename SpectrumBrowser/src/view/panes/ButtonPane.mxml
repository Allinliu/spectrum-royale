  <html:Div height="12"/>

  <sp:Heading size="4" text="Warning"/>
  <sp:Body size="4" text="The negative button is for high emphasis of negative or destructive actions."/>
  <html:Div height="12"/>
  <sp:ButtonGroup>
    <sp:Button flavor="warning" text="Button"/>
    <sp:Button flavor="warning" text="Button" disabled="true"/>
  </sp:ButtonGroup>
  <html:Div height="12"/>
  <sp:TypographyGroup>
    <sp:Heading size="5" text="Markup"/>
    <html:Div height="12"/>
