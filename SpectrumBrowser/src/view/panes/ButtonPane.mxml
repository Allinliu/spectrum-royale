      <sp:Code text='&lt;sp:Button flavor="primary" text="Button" quiet="true" disabled="true"/&gt;' size="4" style="white-space:break-spaces;"/>
    </html:P>
  </sp:TypographyGroup>
  <html:Div height="12"/>

  <sp:Heading size="4" text="Secondary"/>
  <sp:Body size="4" text="The secondary button is for low emphasis."/>
  <html:Div height="12"/>
