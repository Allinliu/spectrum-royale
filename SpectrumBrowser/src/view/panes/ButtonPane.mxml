      <sp:Code text='&lt;sp:Button flavor="warning" text="Button" quiet="true" disabled="true"/&gt;' size="4" style="white-space:break-spaces;"/>
    </html:P>
  </sp:TypographyGroup>
  <html:Div height="12"/>
</view:DemoPane>