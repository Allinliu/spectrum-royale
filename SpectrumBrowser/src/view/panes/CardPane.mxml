<view:DemoPane xmlns:fx="http://ns.adobe.com/mxml/2009"
  xmlns:view="view.*" xmlns:sp="library://ns.unhurdle.com/spectrum"
  xmlns="library://ns.apache.org/royale/html" xmlns:comp="view.components.*"
  title="Card">
  <fx:Script>
    <![CDATA[
      [Bindable]public var standardMarkup:String =
    '<sp:Card localId="card1" width="200" coverSrc="https://opensource.adobe.com/spectrum-css/static/images/example-card-portrait.jpg">\n'+
    '  <sp:body>\n'+
    '    <sp:CardBody>\n'+
    '      <sp:CardHeader>\n'+
    '        <sp:CardTitle text="Card Title"/>\n'+
    '        <sp:CardActionMenu localId="actionMenu" dataProvider="[\'Focused\',\'Unfocused\']" selectedIndex="1" change="changeFocus()"/>\n'+
    '      </sp:CardHeader>\n'+
    '      <sp:CardContent>\n'+
    '        <sp:CardSubtitle text="jpg"/>\n'+
    '      </sp:CardContent>\n'+
    '    </sp:CardBody>\n'+
    '  </sp:body>\n'+
    '  <sp:quickActions>\n'+
    '    <sp:QuickActions>\n'+
    '      <sp:CheckBox/>\n'+
    '    </sp:QuickActions>\n'+
    '  </sp:quickActions>\n'+
    '  <sp:footer>\n'+
    '    <sp:CardFooter text="Footer"/>\n'+
    '  </sp:footer>\n'+
    '</sp:Card>';
      private function changeFocus():void{
          card1.focused = actionMenu.selectedIndex == 0;
      }
    ]]>
  </fx:Script>

  <comp:Variant notes="A standard card with cover photo and footer. Change the menu selection in the card to change focus.">
    <sp:Card localId="card1" width="200" coverSrc="https://opensource.adobe.com/spectrum-css/static/images/example-card-portrait.jpg">
      <sp:body>
        <sp:CardBody>
          <sp:CardHeader>
            <sp:CardTitle text="Card Title"/>
            <sp:CardActionMenu localId="actionMenu" dataProvider="['Focused','Unfocused']" selectedIndex="1" change="changeFocus()"/>
          </sp:CardHeader>
          <sp:CardContent>
            <sp:CardSubtitle text="jpg"/>
          </sp:CardContent>
        </sp:CardBody>
      </sp:body>
      <sp:quickActions>
        <sp:QuickActions>
          <sp:CheckBox/>
        </sp:QuickActions>
      </sp:quickActions>
      <sp:footer>
        <sp:CardFooter text="Footer"/>
      </sp:footer>
    </sp:Card>
  </comp:Variant>
  <comp:Markup>
    <comp:StyledCode text='{standardMarkup}'/>
  </comp:Markup>


</view:DemoPane>