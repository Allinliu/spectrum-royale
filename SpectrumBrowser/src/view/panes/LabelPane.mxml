      <sp:Label text="Blue Label" color="blue"/>
      <sp:Label text="Fuchsia Label" color="fuchsia"/>
    </Div>
  </comp:Variant>
  <comp:Markup>
    <comp:StyledCode text='{standard}'/>
  </comp:Markup>

  <comp:Variant header="Activity labels">
    <Div>    
      <sp:Label text="Active" color="active"/>
      <sp:Label text="Inactive" color="inactive"/>
    </Div>
  </comp:Variant>
