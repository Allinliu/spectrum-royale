  <comp:Variant>
    <Div>
      <sp:Label text="Grey Label" color="grey"/>
      <sp:Label text="Red Label" color="red"/>
      <sp:Label text="Orange Label" color="orange"/>
      <sp:Label text="Yellow Label" color="yellow"/>
      <sp:Label text="Seafoam Label" color="seafoam"/>
